<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ITBrandMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.entity.TBrand">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="logo" property="logo" />
        <result column="desc" property="desc" />
        <result column="url" property="url" />
        <result column="sort" property="sort" />
        <result column="cat_name" property="catName" />
        <result column="parent_cat_id" property="parentCatId" />
        <result column="cat_id" property="catId" />
        <result column="is_hot" property="isHot" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, logo, desc, url, sort, cat_name, parent_cat_id, cat_id, is_hot
    </sql>
    <select id="select" resultType="com.example.entity.TBrand">
        select name from t_brand
    </select>

</mapper>
