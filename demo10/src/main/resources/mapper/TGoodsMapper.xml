<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.TGoodsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.demo.model.TGoods">
        <id column="id" property="id" />
        <result column="goods_name" property="goodsName" />
        <result column="goods_title" property="goodsTitle" />
        <result column="good_img" property="goodImg" />
        <result column="goods_detial" property="goodsDetial" />
        <result column="goods_price" property="goodsPrice" />
        <result column="goods_stock" property="goodsStock" />
        <result column="start_date" property="startDate"/>
        <result column="end_time" property="endTime"/>
        <result column="sock_count" property="sockCount"/>
        <result column="seckill_price" property="seckillPrice"/>
    </resultMap>
    <resultMap id="GetMessageResultMap" type="com.example.demo.model.TGoods" extends="BaseResultMap">
    </resultMap>
    <resultMap id="GetMessageByidresultMap" type="com.example.demo.model.TGoods" extends="BaseResultMap">
        <result column="end_time" property="endTime"/>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, goods_name, goods_title, good_img, goods_detial, goods_price, goods_stock
    </sql>
    <select id="GetMessage"  resultType="TGoods" >
        select sg.seckill_price, g.id, g.goods_name
             ,g.good_img, g.goods_price,g.goods_detial,
               g.goods_stock,g.goods_title from t_goods g join t_seckill_goods sg
                                                                                                                                              on g.id = sg.goods_id;

    </select>
    <select id="GetMessageByid" resultMap="GetMessageResultMap">
        select sg.seckill_price, g.id, g.goods_name
                ,g.good_img, sg.sock_count,g.goods_detial,
               sg.start_date,sg.end_time,
               g.goods_price,g.goods_title from t_goods g join t_seckill_goods sg on g.id =sg.id
        where sg.id = #{id}
    </select>

</mapper>
